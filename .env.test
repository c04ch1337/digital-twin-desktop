# Digital Twin Desktop - Test Environment Configuration

# ============================================================================
# API Keys for LLM Services
# ============================================================================
OPENAI_API_KEY=sk-test-mock_openai_api_key_for_testing
ANTHROPIC_API_KEY=sk-ant-test-mock_anthropic_api_key_for_testing

# ============================================================================
# Database Configuration
# ============================================================================
DB_PATH=:memory:
DB_MAX_CONNECTIONS=1
DB_FOREIGN_KEYS=true
DB_WAL_MODE=false

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=error
LOG_FILE_PATH=./logs/test/digital_twin.log
LOG_JSON_FORMAT=false

# ============================================================================
# Security Configuration
# ============================================================================
ENCRYPTION_KEY=test_32_character_encryption_key_12345
AUTH_SECRET=test_auth_secret_for_testing_only
TOKEN_EXPIRATION=3600
CORS_ORIGINS=http://localhost:5173,http://localhost:1420

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_SYSTEM_PROMPT_FILE=./config/system_prompt.txt
AGENT_DEFAULT_MODEL=gpt-4
AGENT_TEMPERATURE=0.0
AGENT_MAX_TOKENS=1024
AGENT_TOP_P=1.0
AGENT_FREQUENCY_PENALTY=0.0
AGENT_PRESENCE_PENALTY=0.0

# Agent Memory Configuration
AGENT_MEMORY_ENABLED=true
AGENT_MEMORY_MAX_MESSAGES=10
AGENT_MEMORY_RETENTION_DAYS=1
AGENT_MEMORY_COMPRESSION_ENABLED=false

# Agent Long-Term Memory Configuration
AGENT_LONG_TERM_MEMORY_ENABLED=false
AGENT_LONG_TERM_MEMORY_EMBEDDING_MODEL=text-embedding-3-small
AGENT_LONG_TERM_MEMORY_SIMILARITY_THRESHOLD=0.7
AGENT_LONG_TERM_MEMORY_MAX_ENTRIES=100

# Agent Rate Limiting
AGENT_RATE_LIMIT_REQUESTS=10000
AGENT_RATE_LIMIT_WINDOW_SECONDS=60
AGENT_RATE_LIMIT_BURST_SIZE=1000

# ============================================================================
# MQTT Configuration (for IoT device communication)
# ============================================================================
MQTT_BROKER_URL=mqtt://localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=digital-twin-test
MQTT_USERNAME=test_user
MQTT_PASSWORD=test_password
MQTT_TIMEOUT_SECONDS=5

# ============================================================================
# Modbus Configuration (for industrial device communication)
# ============================================================================
MODBUS_HOST=localhost
MODBUS_PORT=502
MODBUS_TIMEOUT_SECONDS=2
MODBUS_MAX_RETRIES=1

# ============================================================================
# Web Tool Configuration
# ============================================================================
WEB_TOOL_MAX_RESPONSE_SIZE=1048576
WEB_TOOL_TIMEOUT_SECONDS=10
WEB_TOOL_ALLOWED_DOMAINS=localhost,127.0.0.1,example.com

# ============================================================================
# File Tool Configuration
# ============================================================================
FILE_TOOL_BASE_PATH=./data/test/files
FILE_TOOL_MAX_FILE_SIZE=1048576
FILE_TOOL_ALLOWED_EXTENSIONS=txt,json,csv,xml

# ============================================================================
# Sandbox Configuration
# ============================================================================
SANDBOX_ENABLED=false
SANDBOX_MAX_EXECUTION_TIME=10
SANDBOX_MAX_MEMORY_MB=128
SANDBOX_ALLOW_NETWORK=true
SANDBOX_ALLOW_FILESYSTEM=true

# ============================================================================
# API Key Configuration
# ============================================================================
API_KEY_AUTH_ENABLED=false
API_KEY_EXPIRATION=3600
API_KEY_MAX_PER_USER=5

# ============================================================================
# Test Settings
# ============================================================================
VITE_DEV_SERVER_PORT=5173
TAURI_DEV_SERVER_PORT=1420
APP_ENV=test
