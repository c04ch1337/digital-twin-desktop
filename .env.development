# Digital Twin Desktop - Development Environment Configuration

# ============================================================================
# API Keys for LLM Services
# ============================================================================
OPENAI_API_KEY=sk-dev-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-dev-your_anthropic_api_key_here
OPENROUTER_API_KEY=sk-or-dev-your_openrouter_api_key_here
GEMINI_API_KEY=dev-your_gemini_api_key_here
HUGGINGFACE_API_KEY=hf_dev_your_huggingface_api_key_here

# ============================================================================
# LLM Provider Configuration
# ============================================================================
# Default LLM provider (openai, anthropic, openrouter, gemini, huggingface, ollama, lmstudio)
LLM_DEFAULT_PROVIDER=openai

# OpenAI Configuration
LLM_OPENAI_API_KEY=${OPENAI_API_KEY}
LLM_OPENAI_DEFAULT_MODEL=gpt-4
LLM_OPENAI_TIMEOUT_SECONDS=30

# Anthropic Configuration
LLM_ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
LLM_ANTHROPIC_DEFAULT_MODEL=claude-2
LLM_ANTHROPIC_TIMEOUT_SECONDS=30

# OpenRouter Configuration
LLM_OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
LLM_OPENROUTER_DEFAULT_MODEL=openrouter/auto
LLM_OPENROUTER_SITE_URL=http://localhost:5173
LLM_OPENROUTER_SITE_NAME=Digital Twin Dev
LLM_OPENROUTER_TIMEOUT_SECONDS=30

# Google Gemini Configuration
LLM_GEMINI_API_KEY=${GEMINI_API_KEY}
LLM_GEMINI_DEFAULT_MODEL=gemini-pro
LLM_GEMINI_TIMEOUT_SECONDS=30

# HuggingFace Configuration
LLM_HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}
LLM_HUGGINGFACE_DEFAULT_MODEL=gpt2
LLM_HUGGINGFACE_TIMEOUT_SECONDS=30

# Ollama Configuration (Local)
LLM_OLLAMA_BASE_URL=http://localhost:11434
LLM_OLLAMA_DEFAULT_MODEL=llama2
LLM_OLLAMA_TIMEOUT_SECONDS=30

# LMStudio Configuration (Local)
LLM_LMSTUDIO_BASE_URL=http://localhost:1234
LLM_LMSTUDIO_DEFAULT_MODEL=local-model
LLM_LMSTUDIO_TIMEOUT_SECONDS=30

# ============================================================================
# Database Configuration
# ============================================================================
DB_PATH=./data/dev/digital_twin.db
DB_MAX_CONNECTIONS=10
DB_FOREIGN_KEYS=true
DB_WAL_MODE=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/dev/digital_twin.log
LOG_JSON_FORMAT=false

# ============================================================================
# Security Configuration
# ============================================================================
ENCRYPTION_KEY=dev_32_character_encryption_key_12345
AUTH_SECRET=dev_auth_secret_for_testing_only
TOKEN_EXPIRATION=7200
CORS_ORIGINS=http://localhost:5173,http://localhost:1420,http://127.0.0.1:5173,http://127.0.0.1:1420

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_SYSTEM_PROMPT_FILE=./config/system_prompt.txt
AGENT_DEFAULT_MODEL=gpt-4
AGENT_TEMPERATURE=0.8
AGENT_MAX_TOKENS=4096
AGENT_TOP_P=0.95
AGENT_FREQUENCY_PENALTY=0.1
AGENT_PRESENCE_PENALTY=0.1

# Agent Memory Configuration
AGENT_MEMORY_ENABLED=true
AGENT_MEMORY_MAX_MESSAGES=200
AGENT_MEMORY_RETENTION_DAYS=7
AGENT_MEMORY_COMPRESSION_ENABLED=false

# Agent Long-Term Memory Configuration
AGENT_LONG_TERM_MEMORY_ENABLED=true
AGENT_LONG_TERM_MEMORY_EMBEDDING_MODEL=text-embedding-3-small
AGENT_LONG_TERM_MEMORY_SIMILARITY_THRESHOLD=0.6
AGENT_LONG_TERM_MEMORY_MAX_ENTRIES=50000

# Agent Rate Limiting
AGENT_RATE_LIMIT_REQUESTS=1000
AGENT_RATE_LIMIT_WINDOW_SECONDS=60
AGENT_RATE_LIMIT_BURST_SIZE=50

# ============================================================================
# MQTT Configuration (for IoT device communication)
# ============================================================================
MQTT_BROKER_URL=mqtt://localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=digital-twin-dev
MQTT_USERNAME=dev_user
MQTT_PASSWORD=dev_password
MQTT_TIMEOUT_SECONDS=30

# ============================================================================
# Modbus Configuration (for industrial device communication)
# ============================================================================
MODBUS_HOST=localhost
MODBUS_PORT=502
MODBUS_TIMEOUT_SECONDS=10
MODBUS_MAX_RETRIES=5

# ============================================================================
# Web Tool Configuration
# ============================================================================
WEB_TOOL_MAX_RESPONSE_SIZE=5242880
WEB_TOOL_TIMEOUT_SECONDS=60
WEB_TOOL_ALLOWED_DOMAINS=localhost,127.0.0.1,example.com,api.example.com

# ============================================================================
# File Tool Configuration
# ============================================================================
FILE_TOOL_BASE_PATH=./data/dev/files
FILE_TOOL_MAX_FILE_SIZE=52428800
FILE_TOOL_ALLOWED_EXTENSIONS=txt,json,csv,xml,pdf,md,log

# ============================================================================
# Sandbox Configuration
# ============================================================================
SANDBOX_ENABLED=false
SANDBOX_MAX_EXECUTION_TIME=60
SANDBOX_MAX_MEMORY_MB=512
SANDBOX_ALLOW_NETWORK=true
SANDBOX_ALLOW_FILESYSTEM=true

# ============================================================================
# API Key Configuration
# ============================================================================
API_KEY_AUTH_ENABLED=false
API_KEY_EXPIRATION=2592000
API_KEY_MAX_PER_USER=10

# ============================================================================
# Development Settings
# ============================================================================
VITE_DEV_SERVER_PORT=5173
TAURI_DEV_SERVER_PORT=1420
APP_ENV=development
