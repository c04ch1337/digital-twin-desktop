# Digital Twin Desktop - Production Environment Configuration

# ============================================================================
# API Keys for LLM Services
# ============================================================================
# IMPORTANT: Set these via secure environment variables in production
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# ============================================================================
# Database Configuration
# ============================================================================
DB_PATH=/var/lib/digital-twin/digital_twin.db
DB_MAX_CONNECTIONS=20
DB_FOREIGN_KEYS=true
DB_WAL_MODE=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/digital-twin/digital_twin.log
LOG_JSON_FORMAT=true

# ============================================================================
# Security Configuration
# ============================================================================
# IMPORTANT: Set these via secure environment variables in production
ENCRYPTION_KEY=${ENCRYPTION_KEY}
AUTH_SECRET=${AUTH_SECRET}
TOKEN_EXPIRATION=1800
CORS_ORIGINS=https://app.example.com,https://api.example.com

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_SYSTEM_PROMPT_FILE=/etc/digital-twin/system_prompt.txt
AGENT_DEFAULT_MODEL=gpt-4
AGENT_TEMPERATURE=0.5
AGENT_MAX_TOKENS=2048
AGENT_TOP_P=0.9
AGENT_FREQUENCY_PENALTY=0.0
AGENT_PRESENCE_PENALTY=0.0

# Agent Memory Configuration
AGENT_MEMORY_ENABLED=true
AGENT_MEMORY_MAX_MESSAGES=50
AGENT_MEMORY_RETENTION_DAYS=90
AGENT_MEMORY_COMPRESSION_ENABLED=true

# Agent Long-Term Memory Configuration
AGENT_LONG_TERM_MEMORY_ENABLED=true
AGENT_LONG_TERM_MEMORY_EMBEDDING_MODEL=text-embedding-3-small
AGENT_LONG_TERM_MEMORY_SIMILARITY_THRESHOLD=0.75
AGENT_LONG_TERM_MEMORY_MAX_ENTRIES=100000

# Agent Rate Limiting
AGENT_RATE_LIMIT_REQUESTS=50
AGENT_RATE_LIMIT_WINDOW_SECONDS=60
AGENT_RATE_LIMIT_BURST_SIZE=5

# ============================================================================
# MQTT Configuration (for IoT device communication)
# ============================================================================
MQTT_BROKER_URL=mqtt://mqtt.example.com
MQTT_BROKER_PORT=8883
MQTT_CLIENT_ID=digital-twin-prod
MQTT_USERNAME=${MQTT_USERNAME}
MQTT_PASSWORD=${MQTT_PASSWORD}
MQTT_TIMEOUT_SECONDS=30

# ============================================================================
# Modbus Configuration (for industrial device communication)
# ============================================================================
MODBUS_HOST=modbus.example.com
MODBUS_PORT=502
MODBUS_TIMEOUT_SECONDS=5
MODBUS_MAX_RETRIES=3

# ============================================================================
# Web Tool Configuration
# ============================================================================
WEB_TOOL_MAX_RESPONSE_SIZE=1048576
WEB_TOOL_TIMEOUT_SECONDS=30
WEB_TOOL_ALLOWED_DOMAINS=api.example.com,data.example.com

# ============================================================================
# File Tool Configuration
# ============================================================================
FILE_TOOL_BASE_PATH=/var/lib/digital-twin/files
FILE_TOOL_MAX_FILE_SIZE=10485760
FILE_TOOL_ALLOWED_EXTENSIONS=txt,json,csv,xml,pdf

# ============================================================================
# Sandbox Configuration
# ============================================================================
SANDBOX_ENABLED=true
SANDBOX_MAX_EXECUTION_TIME=30
SANDBOX_MAX_MEMORY_MB=256
SANDBOX_ALLOW_NETWORK=false
SANDBOX_ALLOW_FILESYSTEM=false

# ============================================================================
# API Key Configuration
# ============================================================================
API_KEY_AUTH_ENABLED=true
API_KEY_EXPIRATION=2592000
API_KEY_MAX_PER_USER=3

# ============================================================================
# Production Settings
# ============================================================================
VITE_DEV_SERVER_PORT=5173
TAURI_DEV_SERVER_PORT=1420
APP_ENV=production
